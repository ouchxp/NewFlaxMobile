<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_gradient_hover"
    tools:context=".HomeScreen" >

    <Button
    	android:id="@+id/main_button_play"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_height="90dp"
        android:layout_width="fill_parent"
    	android:textSize="50dp"
    	android:textColor="@color/grey"
    	android:textColorHighlight="#b1e7ed"
    	android:text="@string/main_play_button"
    	android:background="@drawable/home_style_button_selector"
    	android:contentDescription="@string/main_play_button"
    	android:onClick="play" />

    <TextView
        android:id="@+id/text_view_home_game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        android:textSize="64dp" />

    <ImageView
        android:id="@+id/flax_icon"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
  		android:scaleType="fitXY" 
  		android:adjustViewBounds="true" 
  		android:contentDescription="@string/flax_icon" 
        android:layout_alignTop="@+id/text_view_home_game_title"
        android:src="@drawable/bg_home_screen" />

</RelativeLayout>
